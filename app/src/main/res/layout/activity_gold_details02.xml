<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fcfcfc"
    android:orientation="vertical"
    tools:context="com.ziyawang.ziya.activity.GoldDetails02Activity">

    <!--标题页面-->
    <RelativeLayout
        android:id="@+id/my_gold_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fdd000">

        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>

        <TextView
            android:text="明细详情"
            android:id="@+id/service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="18dp" />

    </RelativeLayout>

    <!--花费的金钱-->
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/item_niu"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#7c7c7c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="25sp"
                android:id="@+id/item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_color"
                android:layout_marginBottom="3dp"
                android:layout_alignBottom="@id/item_money"
                android:textSize="15sp"
                android:layout_toRightOf="@id/item_money"
                android:text="芽币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </RelativeLayout>

    <!--类型-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#7c7c7c"
            android:text="类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_type"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <!--时间-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#7c7c7c"
            android:text="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_time"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!--订单号-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#7c7c7c"
            android:text="编号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_orderNumber"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!--操作-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/a"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:textColor="#7c7c7c"
            android:text="操作"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_do"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/a"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
