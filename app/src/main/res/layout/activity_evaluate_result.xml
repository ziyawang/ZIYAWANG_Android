<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f4f4f4"
    tools:context="com.ziyawang.ziya.activity.EvaluateResultActivity">

    <!--标题页面-->
    <RelativeLayout
        android:id="@+id/details_info_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fdd000">

        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="债权风险评估系统"
            android:textColor="#000"
            android:textSize="18dp" />

    </RelativeLayout>

    <TextView
        android:background="#fff"
        android:paddingTop="25dp"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="18sp"
        android:text="评估结果!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/evaluate_score"
        android:background="#fff"
        android:paddingTop="17dp"
        android:paddingBottom="30dp"
        android:gravity="center"
        android:textColor="#333"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ziyawang.ziya.view.JustifyTextView
            android:id="@+id/evaluate_des"
            android:layout_margin="16dp"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginBottom="4dp"
            android:id="@+id/sub"
            android:text="发布债权"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp" />

        <Button
            android:layout_marginBottom="4dp"
            android:id="@+id/again"
            android:text="重新测评"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ceping_again"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp" />
    </LinearLayout>





</LinearLayout>
