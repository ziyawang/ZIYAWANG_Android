<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/my_person_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/default_icon" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/my_person_title"
        android:layout_toRightOf="@id/my_person_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：" />

            <TextView
                android:id="@+id/my_person_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话：" />

            <TextView
                android:id="@+id/my_person_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#6d6d6d"
            android:drawableTop="@mipmap/icon102"
            android:layout_marginRight="16dp"
            android:text="收藏"
            android:id="@+id/text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#6d6d6d"
            android:drawableTop="@mipmap/icon101"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/text_one"
            android:text="合作"
            android:id="@+id/text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#6d6d6d"
            android:drawableTop="@mipmap/icon103"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/text_two"
            android:text="私聊"
            android:id="@+id/text_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>