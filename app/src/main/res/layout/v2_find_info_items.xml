<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/news_image"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:layout_width="110dp"
            android:layout_height="81dp" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="13dp"
            android:id="@+id/img"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:singleLine="true"
            android:layout_toLeftOf="@id/img"
            android:id="@+id/news_title"
            android:layout_marginLeft="10dp"
            android:textColor="#323232"
            android:textSize="14sp"
            android:layout_toRightOf="@id/news_image"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/info"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/news_image"
            android:layout_below="@id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_part"
                android:layout_marginLeft="10dp"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_part_one"
                android:layout_marginLeft="10dp"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_part_two"
                android:layout_marginLeft="10dp"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/info_no"
                android:layout_marginLeft="10dp"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/info_bee"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#ef8300"
                android:textSize="13sp"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/info_danwei"
                android:textColor="#868686"
                android:textSize="11sp"
                android:text="芽币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liangdian"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/news_image"
            android:layout_below="@id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/liangdian01"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_uesrname"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/liangdian02"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_uesrname"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/liangdian03"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_uesrname"
                android:textColor="#868686"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_below="@id/liangdian"
            android:id="@+id/right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/v2info_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_toLeftOf="@id/right"
            android:id="@+id/jiage"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/news_image"
            android:layout_below="@id/liangdian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_01"
                android:src="@mipmap/v2shichang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_01"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#ef8300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image_02"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/v2zhuanrang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/text_02"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#ef8300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_below="@id/jiage"
            android:background="#f00"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/czgg_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/czgg_image"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:layout_width="110dp"
            android:layout_height="81dp" />

        <TextView
            android:id="@+id/czgg_title"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="#323232"
            android:textSize="14sp"
            android:layout_toRightOf="@id/czgg_image"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/news_des"
            android:layout_below="@id/czgg_title"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="#868686"
            android:textSize="11sp"
            android:layout_toRightOf="@id/czgg_image"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#868686"
            android:textSize="11sp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/news_des"
            android:layout_marginTop="4dp"
            android:id="@+id/news_time"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/czgg_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignBottom="@id/news_time"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/v2info_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!--信息的下方美化三角-->
    <TextView
        android:background="@mipmap/icon31"
        android:layout_width="match_parent"
        android:layout_height="10dp" />


</LinearLayout>