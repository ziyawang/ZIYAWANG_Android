<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f4f4f4"
    tools:context="com.ziyawang.ziya.activity.PersonalInformationActivity">

    <RelativeLayout
        android:background="#fdd000"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>

        <TextView
            android:textSize="18dp"
            android:gravity="center"
            android:id="@+id/release_head"
            android:textColor="#000"
            android:text="个人信息"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basic_change_icon"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="15dp"
            android:textColor="#6d6d6d"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.ziyawang.ziya.view.MyIconImageView
            android:id="@+id/my_icon"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/default_icon"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@mipmap/icon83"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/userName_relative"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:textSize="15dp"
            android:textColor="#6d6d6d"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLength="16"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:paddingRight="10dp"
            android:id="@+id/userName"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/icon83"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:textSize="15dp"
            android:textColor="#6d6d6d"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="联系电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phoneNumber"
            android:paddingRight="30dp"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/basic_changePwd"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:textColor="#6d6d6d"
        android:gravity="center_vertical"
        android:text="修改密码"
        android:paddingRight="10dp"
        android:drawableRight="@mipmap/icon83"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
    </TextView>
</LinearLayout>
