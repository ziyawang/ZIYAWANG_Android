<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ef8200"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="#9b9b9b"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/money_transfer_linear"
        android:layout_marginTop="1dp"
        android:background="#ffffff">


        <LinearLayout
            android:layout_marginLeft="16dp"
            android:id="@+id/money_transfer_info"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:textColor="#6d6d6d"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:id="@+id/money_transfer_area_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务地区：" />

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:id="@+id/service_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/niu"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:textColor="#6d6d6d"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:id="@+id/money_transfer_from_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务类型：" />

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:id="@+id/service_type"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/money_transfer_from_left"
                    android:layout_toRightOf="@+id/money_transfer_from_left" />

            </LinearLayout>


        </LinearLayout>



        <ImageView
            android:layout_marginRight="16dp"
            android:src="@mipmap/info_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_alignBottom="@+id/money_transfer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="#6d6d6d"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:id="@+id/aaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务等级："
                android:layout_alignBottom="@+id/money_transfer_info"
                android:layout_toRightOf="@+id/money_transfer_info"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:text="VIP1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#c01444"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:id="@+id/service_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/money_transfer_info"
                android:layout_toRightOf="@id/aaa"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="31dp" />

        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:background="@mipmap/icon31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>