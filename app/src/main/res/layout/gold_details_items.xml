<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:paddingLeft="16dp"
        android:id="@+id/gold_one"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="13dp"
            android:id="@+id/gold_items_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="18sp" />

        <TextView
            android:layout_marginBottom="13dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/gold_items_type"
            android:id="@+id/gold_items_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9d9d9d"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/gold_items_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90c31f"
            android:textSize="25sp" />

        <TextView
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@id/gold_items_balance"
            android:id="@+id/gold_items_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90c31f"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gold_items_balance"
            android:layout_toEndOf="@+id/gold_items_balance" />

    </RelativeLayout>



</RelativeLayout>