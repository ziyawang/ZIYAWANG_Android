<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:background="@drawable/bgfdd000_rad10"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/shejian_logo"
                    android:layout_width="55dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/text_word"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/bgfff_rad50_strfdd000"
                    android:text="招商推介"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ScrollView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="170dp">
                    <com.ziyawang.ziya.view.JustifyTextView
                        android:id="@+id/text_des"
                        android:textSize="14sp"
                        android:textColor="#282828"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_close"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@mipmap/dic_pop_ok"
            android:layout_width="76dp"
            android:layout_height="76dp" />

    </FrameLayout>



</LinearLayout>