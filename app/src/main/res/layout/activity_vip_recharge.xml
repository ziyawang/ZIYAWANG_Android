<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.ziyawang.ziya.activity.VipRechargeActivity">

    <!--标题页面-->
    <RelativeLayout
        android:id="@+id/details_news_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fdd000">
        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="会员充值"
            android:textColor="#000"
            android:textSize="18dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginBottom="13dp"
                android:layout_marginTop="16dp"
                android:id="@+id/img_vip_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginBottom="28dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/vip_recharge_title"
                    android:textSize="13sp"
                    android:textColor="#5d5d5d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/know"
                    android:textSize="13sp"
                    android:textColor="#d92d42"
                    android:text="[了解特权]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/vip_recharage"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/money_relative01"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <TextView
                        android:id="@+id/vip_type"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:text="季度会员"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_select01"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/unselect"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#000"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@id/img_select01"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/recharge_money01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <TextView
                    android:background="#e0e0e0"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <RelativeLayout
                    android:id="@+id/money_relative02"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <TextView
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:text="年度会员"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_select02"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/unselect"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#000"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@id/img_select02"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/recharge_money02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>



            <!--微信-->
            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_below="@id/gridView"
                android:background="#fff"
                android:id="@+id/wx_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/wx_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/wx_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:text="微信支付"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#6d6d6d"
                        android:textSize="12sp"
                        android:text="推荐安装微信5.0及以上版本的用户使用"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/wx_select"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/rechargeselect"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>

            <!--支付宝-->
            <RelativeLayout
                android:layout_below="@id/wx_relative"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:id="@+id/alipay_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/alipay_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/alipay_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:text="支付宝"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#6d6d6d"
                        android:textSize="12sp"
                        android:text="推荐支付宝用户使用"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/alipay_select"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/unselect"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <!--银行卡支付-->
            <RelativeLayout

                android:layout_below="@id/alipay_relative"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:id="@+id/upacp_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/upacp_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/upacp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/upacp_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:text="银行卡支付"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#6d6d6d"
                        android:textSize="12sp"
                        android:text="安全极速支付，无需开通网银"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/upacp_select"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/unselect"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <Button
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_miao"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/upacp_relative"
                android:id="@+id/recharge"
                android:text="确认支付"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
