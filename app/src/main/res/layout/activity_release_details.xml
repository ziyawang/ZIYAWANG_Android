<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#f4f4f4"
    tools:context="com.ziyawang.ziya.activity.ReleaseDetailsActivity">

    <RelativeLayout
        android:id="@+id/details_release_head"
        android:background="#fdd000"
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:id="@+id/title"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <!--悬停页面-->

    <LinearLayout
        android:id="@+id/niu_101"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="确认发布"
            android:background="@drawable/button_release"
            android:id="@+id/linearLayout_release"
            android:layout_width="match_parent"
            android:layout_height="44dp">
        </TextView>

    </LinearLayout>



    <ScrollView
        android:id="@+id/niuniuniu"
        android:layout_above="@id/niu_101"
        android:layout_below="@id/details_release_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relative_head01"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/head01"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="典当"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_type"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:textColor="#6d6d6d"
                    android:id="@+id/release_one"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="资产包类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:id="@+id/textView_type"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_from"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:textColor="#6d6d6d"
                    android:id="@+id/text_from_a"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="来源"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:id="@+id/text_from"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relative_total"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:textColor="#6d6d6d"
                    android:id="@+id/text_total"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="总金额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#ef8200"
                    android:textSize="9dp"
                    android:gravity="bottom"
                    android:layout_alignBottom="@id/text_total"
                    android:layout_marginRight="35dp"
                    android:id="@+id/release_wan01"
                    android:text="万"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:maxLength="11"
                    android:digits="0123456789."
                    android:numeric="decimal"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/release_wan01"
                    android:layout_toRightOf="@id/text_total"
                    android:gravity="end|center"
                    android:textColorHint="#6d6d6d"
                    android:textColor="#000"
                    android:id="@+id/total_money"
                    android:hint="请输入金额"
                    android:background="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_trans"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:textColor="#6d6d6d"
                    android:id="@+id/text_trans"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="转让价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#ef8200"
                    android:textSize="9dp"
                    android:gravity="bottom"
                    android:layout_alignBottom="@id/text_trans"
                    android:layout_marginRight="35dp"
                    android:id="@+id/release_wan"
                    android:text="万"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <EditText
                    android:digits="0123456789."
                    android:numeric="decimal"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/release_wan"
                    android:layout_toRightOf="@id/text_trans"
                    android:gravity="end|center"
                    android:textColorHint="#6d6d6d"
                    android:textColor="#000"
                    android:id="@+id/trans_edit"
                    android:hint="可输入具体价格"
                    android:background="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relative_yognjin"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/yognjin"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="佣金比例"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:id="@+id/text_yongjin"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relative_status"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="状态"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:id="@+id/text_status"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_part"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:textColor="#6d6d6d"
                    android:id="@+id/release_text_part"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="地区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:id="@+id/text_part"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="请选择"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <EditText
                android:textSize="15dp"
                android:textColor="#6d6d6d"
                android:id="@+id/release_edit"
                android:maxLength="200"
                android:minHeight="100dp"
                android:gravity="top"
                android:hint="请输入内容描述..."
                android:paddingLeft="10dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/release_foot"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:gravity="end"
                android:text="限于200字内"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <!--语音描述页面-->
            <RelativeLayout
                android:id="@+id/release_audio_relative"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:textSize="15dp"
                    android:textColor="#6d6d6d"
                    android:id="@+id/audio_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="语音描述" />

                <Button
                    android:drawablePadding="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@mipmap/icon50"
                    android:background="@drawable/audio_button"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/release_audio_des"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/audio_one"
                    android:textColor="#fff"
                    android:text="长按录入语音" />

                <TextView
                    android:id="@+id/release_audio_des_duration"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#afafaf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/release_audio_des" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/release_audio_cancel"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/release_audio_des_duration"
                    android:text="播放"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/voice_cancel"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/release_audio_cancel"
                    android:text="撤销"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <!--图片获取页面-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:id="@+id/release_img_linear"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/release_frame_one"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/release_img_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/release_img_cancel_one"
                        android:layout_gravity="end"
                        android:src="@mipmap/release_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/release_frame_two"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/release_img_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/release_img_cancel_two"
                        android:layout_gravity="end"
                        android:src="@mipmap/release_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/release_frame_three"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/release_img_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/release_img_cancel_three"
                        android:layout_gravity="end"
                        android:src="@mipmap/release_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <TextView
                    android:background="@drawable/release_add_img"
                    android:paddingTop="10dp"
                    android:textColor="#fdd000"
                    android:drawableTop="@mipmap/icon51"
                    android:id="@+id/release_img_add"
                    android:gravity="center"
                    android:text="添加凭证"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/info_upload"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:textColor="#333"
                    android:textSize="15dp"
                    android:id="@+id/niu_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="清单上传" />

                <TextView
                    android:textColor="#cccccc"
                    android:textSize="15dp"
                    android:id="@+id/niu_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="仅限于PC端上传" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
