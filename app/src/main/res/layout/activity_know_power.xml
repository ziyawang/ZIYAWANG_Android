<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.ziyawang.ziya.activity.KnowPowerActivity">

    <!--标题页面-->
    <RelativeLayout
        android:id="@+id/details_news_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fdd000">
        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="了解特权"
            android:textColor="#000"
            android:textSize="18dp" />

    </RelativeLayout>

    <ImageView
        android:layout_marginBottom="13dp"
        android:layout_marginTop="30dp"
        android:id="@+id/img_vip_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/permission"
        android:id="@+id/text_one"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#ea212c"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ziyawang.ziya.view.JustifyTextView
        android:id="@+id/justifyText_one"
        android:layout_marginTop="4dp"
        android:textColor="#3b3b3b"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/zengsong"
        android:id="@+id/text_two"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#ea212c"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ziyawang.ziya.view.JustifyTextView
        android:id="@+id/justifyText_two"
        android:layout_marginTop="4dp"
        android:textColor="#3b3b3b"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/tuisong"
        android:id="@+id/text_three"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#ea212c"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ziyawang.ziya.view.JustifyTextView
        android:id="@+id/justifyText_three"
        android:layout_marginTop="4dp"
        android:textColor="#3b3b3b"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/lianxidianhua"
        android:id="@+id/text_four"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#ea212c"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ziyawang.ziya.view.JustifyTextView
        android:id="@+id/justifyText_four"
        android:layout_marginTop="4dp"
        android:textColor="#3b3b3b"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
