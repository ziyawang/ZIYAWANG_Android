<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    xmlns:notButton="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.MainActivity">


    <FrameLayout
        android:id="@+id/main_frameyout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="bottom"
            android:background="#000000"
            android:id="@+id/button_homePage"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/homepage"
            android:paddingTop="5dp"
            android:text="首页"
            android:textColor="@drawable/color"
            android:textSize="12sp" />

        <Button
            android:layout_gravity="bottom"
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="#000000"
            android:drawableTop="@drawable/search"
            android:paddingTop="5dp"
            android:text="查看"
            android:textColor="@drawable/color"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/button_release"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="79dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="26dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="53dp">
            </RelativeLayout>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/button_release"
                android:layout_width="53dp"
                android:layout_height="53dp" />

            <TextView
                android:textSize="12sp"
                android:textColor="@drawable/color"
                android:layout_marginTop="57dp"
                android:layout_gravity="center_horizontal"
                android:text="发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <com.ziyawang.ziya.view.NotificationButton
            android:layout_gravity="bottom"
            notButton:circleBgColor="@android:color/holo_red_light"
            notButton:circleSize="8dp"
            notButton:textColor="@android:color/white"
            android:id="@+id/button_information"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="#000000"
            android:drawableTop="@drawable/information"
            android:paddingTop="5dp"
            android:text="消息"
            android:textColor="@drawable/color"
            android:textSize="12sp" />

        <Button
            android:layout_gravity="bottom"
            android:background="#000000"
            android:id="@+id/button_me"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/me"
            android:paddingTop="5dp"
            android:text="我的"
            android:textColor="@drawable/color"
            android:textSize="12sp" />

    </LinearLayout>



</RelativeLayout>
