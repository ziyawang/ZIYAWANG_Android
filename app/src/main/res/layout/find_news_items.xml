<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:background="@mipmap/error_imgs_big"
        android:layout_centerVertical="true"
        android:id="@+id/news_image"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:layout_width="130dp"
        android:layout_height="87dp" />

    <TextView
        android:id="@+id/news_title"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="#272727"
        android:textSize="15sp"
        android:layout_toRightOf="@id/news_image"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:ellipsize="end"
        android:maxLines="2"
        android:id="@+id/news_des"
        android:layout_below="@id/news_title"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="#272727"
        android:textSize="13sp"
        android:layout_toRightOf="@id/news_image"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_below="@id/news_des"
        android:layout_marginTop="7dp"
        android:id="@+id/news_time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/news_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#ff3938"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/news_count"
        android:id="@+id/news_count"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>