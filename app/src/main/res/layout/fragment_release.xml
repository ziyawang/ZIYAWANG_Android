<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:textSize="18dp"
        android:gravity="center"
        android:background="#fdd000"
        android:id="@+id/release_head"
        android:textColor="#000"
        android:text="发布"
        android:layout_width="match_parent"
        android:layout_height="44dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/release_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/Transfer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon01"
                    android:paddingTop="24dp"
                    android:text="资产包转让" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/Withdraw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon02"
                    android:paddingTop="24dp"
                    android:text="债权转让" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/recharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon03"
                    android:paddingTop="24dp"
                    android:text="固产转让" />

            </LinearLayout>

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/QMoney"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon04"
                    android:paddingTop="24dp"
                    android:text="商业保理" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/daijia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon07"
                    android:paddingTop="24dp"
                    android:text="悬赏信息" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/huoyun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon08"
                    android:paddingTop="24dp"
                    android:text="尽职调查" />

            </LinearLayout>

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/chuxing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon06"
                    android:paddingTop="24dp"
                    android:text="融资需求" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/tuangou"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon41"
                    android:paddingTop="24dp"
                    android:text="法律服务" />

                <Button
                    android:drawableTop="@mipmap/icon28"
                    android:text="资产求购"
                    android:id="@+id/lvxing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingTop="24dp" />



            </LinearLayout>

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/waimai"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon29"
                    android:paddingTop="24dp"
                    android:text="委外催收" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/xv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/xu"
                    android:paddingTop="24dp"
                    android:text="投资需求" />

                <Button
                    android:visibility="visible"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="24dp" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <Button
                    android:background="#ffffff"
                    android:id="@+id/shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon05"
                    android:paddingTop="24dp"
                    android:text="典当信息" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/huankuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon27"
                    android:paddingTop="24dp"
                    android:text="担保信息" />


                <Button
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:paddingTop="24dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>