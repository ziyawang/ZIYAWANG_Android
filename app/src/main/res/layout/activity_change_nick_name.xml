<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:line="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f4f4f4"
    tools:context="com.ziyawang.ziya.activity.ChangeNickNameActivity">

    <RelativeLayout
        android:background="#fdd000"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/pre"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/pre" />
        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:gravity="center"
            android:id="@+id/release_head"
            android:textColor="#000"
            android:text="修改昵称"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/changeUserName_ok"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.ziyawang.ziya.view.EmojiEditText
        android:maxLength="16"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        line:lineColorEt="@color/start_button_color"
        android:textColor="#000"
        android:background="#ffffff"
        android:textColorHint="#6d6d6d"
        android:hint="请输入您要修改的昵称"
        android:id="@+id/changeUserName_editText"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_marginLeft="16dp"
        android:text="最多输入16个字符，暂不支持特殊表情。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
